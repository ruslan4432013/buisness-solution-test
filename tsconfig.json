{
  "compilerOptions": {
    "target": "ESNext",
    "lib": [
      "DOM",
      "DOM.Iterable",
      "ESNext"
    ],
    "declaration": false,
    "allowJs": false,
    "skipLibCheck": false,
    "esModuleInterop": true,
    "importHelpers": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "commonjs",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "typeRoots": [
      "./global.d.ts",
      "./node_modules/@types"
    ],
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react-jsx",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "paths": {
      "@entities/*": [
        "src/entities/*"
      ],
      "@pages/*": [
        "src/pages/*"
      ],
      "@src/*": [
        "src/*"
      ],
      "@widgets/*": [
        "src/widgets/*"
      ],
      "@features/*": [
        "src/features/*"
      ],
      "@shared/*": [
        "src/shared/*"
      ],
      "@server/*": [
        "src/server/*"
      ],
      "@styles": [
        "src/shared/styles/index.scss"
      ]
    },
  },
  "include": [
    "./src",
    "./config",
    "./global.d.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}
